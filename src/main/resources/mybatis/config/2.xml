<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--绑定接口-->
<mapper namespace="github.veikkoroc.JavaEE.mybatis.b.DepartmentMapper">
    <resultMap id="departmentMapper" type="github.veikkoroc.JavaEE.mybatis.b.Department">
        <!-- 指定主键列的封装规则
			id:定义主键，底层有优化
			column:指定数据库哪一列
			property:指定对应的JavaBean属性
		 -->
        <id property="id" column="dep_id"></id>
        <result property="name" column="dep_name"></result>
    </resultMap>
    <!--绑定方法-->
    <select id="getAllDepartment" resultMap="departmentMapper">
        select * from tbl_department
    </select>
</mapper>